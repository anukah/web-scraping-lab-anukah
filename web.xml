<web-app xmlns="http://jakarta.ee/xml/ns/jakartaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://jakarta.ee/xml/ns/jakartaee
         http://jakarta.ee/xml/ns/jakartaee/web-app_5_0.xsd"
         version="5.0">

    <servlet>
        <servlet-name>ScrapeServlet</servlet-name>
        <servlet-class>ScrapeServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ScrapeServlet</servlet-name>
        <url-pattern>/scrape</url-pattern>
    </servlet-mapping>

</web-app>